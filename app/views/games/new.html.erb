
<h1 span class="main-color">New Round For <%= current_competitor.username %>:</span></h1>
<%= form_tag "/games/", method: :post do %>
  Category selected: 
    <select name="game_id" class="black-text">
      <option value="1" <%= "selected" if @id == "1" %>>Harry Potter Trivia</option>
      <option value="2" <%= "selected" if @id == "2" %>>History</option>
      <option value="3" <%= "selected" if @id == "3" %> >Pop Culture</option>
    </select>
  Challenger selected: 
    <select name="challenger_id" class="black-text">
        <% Competitor.all.each do |competitor| %>
          <% unless current_competitor == competitor %>
            <option value="<%= competitor.id %>" class="black-text"><%= competitor.username %></option>
          <% end %>
        <% end %>
    </select>
    <br>
    <br>
    <input type="submit" value="Create Trivia Challenge!" span class="btn btn-primary btn-lg">
    
<% end %>